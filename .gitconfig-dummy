# .gitconfig
#  Original by Kevin Robayna - http://kevinrobayna.eu
[user]
    name    = Kevin Robayna
    email   = imkevinrobayna@gmail.com
[github]
    user    = kevinrobayna
[color]
    diff        = auto
    status      = auto
    branch      = auto
    interactive = auto
    ui          = true
    pager       = true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = blue
    frag = magenta
    old  = red
    new  = green
[color "status"]
    added       = yellow
    changed     = green
    untracked   = blue
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    l           = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph
    st          = status -sb
    ci          = commit -m
    co          = checkout
    br          = branch
    unci        = reset --hard HEAD~1
    uncommit    = reset --hard HEAD~1
    cie         = commit --allow-empty -m
    bam         = "!source ~/.githelpers && delete_local_merged_branches"
    bamr        = "!source ~/.githelpers && delete_remote_merged_branches"
    summary     = "!source ~/.githelpers && weekly_summary"
    sm          = submodule
    smu         = submodule foreach git pull origin master
[core]
    excludesfile = ~/.gitignore
[credential]
    helper = cache
[push]
    config  = default
    default = tracking
[rebase]
    autosquash = true
[merge]
    summary = true
[branch]
    autosetuprebase = always 
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
