[user]
    name = Kevin Robayna
    email = k3vinaso@gmail.com
[color]
    ui = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph
    st = status -sb
    ci = commit -m
    co = checkout
    br = branch
    unci = reset --hard HEAD~1
    uncommit = reset --hard HEAD~1
[core]
    excludesfile = ~/.gitignore
[push]
	default = simple
