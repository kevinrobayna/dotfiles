# .gitconfig
#  Original by Kevin Robayna - http://kevinrobayna.eu

[user]
    name = Kevin Robayna
    email = imkevinrobayna@gmail.com
[color]
    ui = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph
    st = status -sb
    ci = commit -m
    co = checkout
    br = branch
    unci = reset --hard HEAD~1
    uncommit = reset --hard HEAD~1
    cie = commit --allow-empty -m
[core]
    excludesfile = ~/.gitignore

[credential]
    helper = cache
[push]
    default = matching
[branch]
    autosetuprebase = always 
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[github]
	user = kevinrobayna
