#!/usr/bin/env zsh

# Make sure everything under dev and work is added to zoxide
mkdir -p ~/dev
ls -d ~/dev/* | xargs -I {} zoxide add {}
mkdir -p ~/work
ls -d ~/work/* | xargs -I {} zoxide add {}

sesh connect "$(sesh list -i | gum filter --limit 1 --placeholder 'Pick a session' --height 60 --prompt='âš¡')"
