[user]
  name = Kevin Robayna
  email = me@kevinrobayna.com
  # NOTE: This key is secured on dashlane. Use GPG Keychain to import the key.
  signingkey = 0FB33959421F81BB
[commit]
  gpgsign = true
[core]
  editor = nvim 
  pager = delta
[pull]
  rebase = false
  ff = yes
[init]
  defaultBranch = master
[merge]
  ff = no
  commit = no
  conflictstyle = diff3
[alias]
  co = checkout
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[diff]
  colorMoved = default
