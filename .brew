# Start
echo "`basename $0` starting."

echo "Instaling Homebrew"
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew doctor

# Ask for the administrator password upfront
sudo -v

echo "Kevin, this will take a while. Take a rest"

echo "brew update"
# Make sure weâ€™re using the latest Homebrew
brew update

echo "brew upgrade"
# Upgrade any already-installed formulae
brew upgrade

echo "brew install powerlevel10k"
brew install romkatv/powerlevel10k/powerlevel10k

echo "brew install tree"
brew install tree

echo "brew install gpg"
brew install gpg

echo "brew tap *"
brew tap homebrew/cask

echo "brew tap caskroom/fonts"
brew tap homebrew/cask-fonts

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

#Java Stuff
echo "brew cask install java"
brew install openjdk
sudo ln -sfn "$(brew --prefix)/opt/openjdk/libexec/openjdk.jdk" /Library/Java/JavaVirtualMachines/openjdk.jdk

echo "brew cask install sublime-text"
brew install sublime-text

echo "brew cask install iterm2"
brew install iterm2

#Some fonts
echo "brew cask install fonts"
brew install font-inconsolata

#Random Stuff
echo "brew cask install aerial"
brew install aerial

#Clipboard Manager
echo "brew install --cask clipy, Remeber to open Clipy"
brew install --cask clipy

echo "`basename $0` complete."
